<project name="EC-DSLIDE" default="package" basedir=".">
  <description>
    Build the EC-DSLIDE plugin
  </description>

  <!-- Plugin-specific properties -->
  <property name="pluginKey" value="EC-DSLIDE" />
  <property name="pluginVersion" value="1.4.6" />
  <!-- 
	1.4.6 - Add runProcedure() to hint and templates
	1.4.5 - Add Javascript API example
